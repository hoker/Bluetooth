<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.joaquinalan.blluetoothmadeformyself.MainActivity">

    <Button
        android:id="@+id/button_main_enablebluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Bluetooth" />

    <Button
        android:id="@+id/button_main_sendmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Message" />

    <Button
        android:id="@+id/button_main_onvisibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Visibility" />

    <EditText
        android:id="@+id/edittext_main_messagetosend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type here" />

    <TextView
        android:id="@+id/textview_main_inbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reciclerview_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>
